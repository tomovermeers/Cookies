<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.OrderActivity">

    <TextView style="@style/MyTitleStyle" android:text="ORDER COOKIES" android:layout_width="match_parent"
              android:layout_weight="3"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="start" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/cb_vanilla" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Vanilla"/>
        <EditText android:layout_width="120dp"
                  android:layout_gravity="end"
                  android:gravity="end"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_quantity_vanilla"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:gravity="start" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/cb_chocolate" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Chocolate"/>
        <EditText android:layout_width="120dp"
                  android:inputType="number"
                  android:gravity="right"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_quantity_chocolate"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:gravity="start" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/cb_frangipane" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Frangipane"/>
        <EditText android:layout_width="120dp"
                  android:inputType="number"
                  android:gravity="end"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_quantity_frangipane"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="start" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/cb_butter" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Butter"/>
        <EditText android:layout_width="120dp"
                  android:inputType="number"
                  android:gravity="end"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_quantity_butter"/>

    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_weight="1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:gravity="center"
                android:background="@drawable/styled_btn" android:id="@+id/btn_total" android:text="Total" android:layout_width="80dp" android:layout_height="80dp"/>
        <TextView android:layout_marginLeft="20dp" android:gravity="end" android:id="@+id/tv_total" android:hint="Total" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="start" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_last_name" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Lastname"/>
        <EditText android:layout_width="250dp"
                  android:gravity="end"
                  android:hint="Fill in your last name"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_last_name"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="start" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_first_name" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Firstname"/>
        <EditText android:layout_width="250dp"
                  android:gravity="end"
                  android:hint="Fill in your first name"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_first_name"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="start" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_email" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Email"/>
        <EditText android:layout_width="250dp"
                  android:gravity="end"
                  android:hint="Fill in your email address"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_email"/>
    </LinearLayout>
    <LinearLayout android:layout_margin="10dp" android:layout_width="match_parent" android:orientation="horizontal"
                  android:layout_weight="1"
                  android:gravity="start" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_phone_number" android:textStyle="bold" android:layout_width="120dp"
                  android:layout_height="wrap_content" android:text="Phone number"/>
        <EditText android:layout_width="250dp"
                  android:gravity="end"
                  android:hint="Fill in your phone number"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_phone_number"/>
    </LinearLayout>
    <Button
            android:background="@drawable/styled_btn" android:id="@+id/btn_order" android:text="@string/order" android:layout_width="80dp" android:layout_height="80dp"/>
</LinearLayout>